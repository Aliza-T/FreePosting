@using FreePosting.Controllers

<div class="container" style="margin-top:50px">

    <div class="row">


        <div class="col-lg-8">

            <!-- Post Content -->
            <form action="/Home/NewPost" method="post">

                <br />
                <textarea placeholder="Description" name="Text" class="form-control" rows="7"></textarea>
                <br />
                <input type="text" placeholder="Name (Optional)" name="Name" class="form-control" maxlength="100" />
                <br />
                <input type="text" placeholder="Phone Number" name="Number" class="form-control" maxlength="15" />
                <br />
                <button class="btn btn-primary">Submit</button>
            </form>
        </div>

    </div>
</div>

